mixin game(gameNumber, name, players, inPlay, gameType)
    div(class="item" number=gameNumber name=name)
        - if(inPlay){
        p
            span(style="float:left; padding-right:5px")= name
            span(class="inPlay" style="float:right; padding-right:5px")= "[IN PLAY]"
        - }else{
        p 
            span(style="float:left; padding-right:5px")= name
            span(class="inPlay" style="float:right; padding-right:5px;")= "[OPEN]"
        - }
        br
        p Players:  
            span
                - var n = 0;
                - while(n < players.length){
                    - if(n != 0){
                    span(style="color:#cecece") , 
                    span(class="username" style="color:" + players[n].color)= players[n].username
                    - }else{
                    span(class="username" style="color:" + players[n].color)= players[n].username
                    - }
                    - n+=1;
                -}
            span(style="float:right; padding-right:5px")= gameType